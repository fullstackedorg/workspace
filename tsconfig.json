{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ES2022",
        "target": "ES2022",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "paths": {
            "fullstacked/*": ["./*"],
            "@fullstacked/deploy/*": ["./packages/deploy/*"]
        }
    },
    "include": [
        "info.ts",
        "version.ts",
        "utils",
        "packages"
    ],
    "exclude": [
        "packages/create/templates",
        "packages/ide"
    ]
}
